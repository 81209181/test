<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hkt.btu.sd.core.dao.mapper.SdSqlReportMapper">
    <resultMap id="SdSqlReportEntity" type="com.hkt.btu.sd.core.dao.entity.SdSqlReportEntity">
        <result column="REPORT_ID" property="reportId"/>
        <result column="REPORT_NAME" property="reportName"/>
        <result column="CRON_EXP" property="cronExp"/>
        <result column="STATUS" property="status"/>
        <result column="SQL" property="sql"/>
        <result column="EXPORT_TO" property="exportTo"/>
        <result column="EMAIL_TO" property="emailTo"/>

        <result column="CREATEDATE" property="createdate"/>
        <result column="CREATEBY" property="createby"/>
        <result column="MODIFYDATE" property="modifydate"/>
        <result column="MODIFYBY" property="modifyby"/>
        <result column="REMARKS" property="remarks"/>
    </resultMap>
    <select id="queryBySQL" parameterType="String" resultType="java.util.LinkedHashMap">
        ${value}
    </select>

    <select id="getSqlReportData" resultMap="SdSqlReportEntity">
        select * from SQL_REPORT
        <where>
            <if test="status != null">
                STATUS = #{status}
            </if>
        </where>
    </select>
</mapper>