<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hkt.btu.sd.core.dao.mapper.SdTicketContactMapper" >
    <resultMap id="TicketContactEntity" type="com.hkt.btu.sd.core.dao.entity.SdTicketContactEntity" >
        <result column="TICKET_MAS_ID" property="ticketMasId" />
        <result column="CONTACT_TYPE" property="contactType" />
        <result column="CONTACT_NAME" property="contactName" />
        <result column="CONTACT_NUMBER" property="contactNumber" />
        <result column="CONTACT_EMAIL" property="contactEmail" />
        <result column="CONTACT_MOBILE" property="contactMobile" />

        <result column="CREATEDATE" property="createdate" />
        <result column="CREATEBY" property="createby" />
        <result column="MODIFYDATE" property="modifydate" />
        <result column="MODIFYBY" property="modifyby" />
    </resultMap>
    <insert id="insertTicketContactInfo">
        insert into TICKET_CONTACT (TICKET_MAS_ID,CONTACT_TYPE,CONTACT_NAME,CONTACT_NUMBER,CONTACT_EMAIL,CONTACT_MOBILE,CREATEBY,MODIFYBY)
        values (#{ticketMasId},#{contactType},#{contactName},#{contactNumber},#{contactEmail},#{contactMobile},#{createBy},#{createBy})
    </insert>

    <select id="selectContactInfoByTicketMasId" resultMap="TicketContactEntity">
        select * from TICKET_CONTACT where TICKET_MAS_ID =#{ticketMasId}
    </select>

    <delete id="removeContactInfoByTicketMasId">
        delete from TICKET_CONTACT where TICKET_MAS_ID =#{ticketMasId}
    </delete>
</mapper>
