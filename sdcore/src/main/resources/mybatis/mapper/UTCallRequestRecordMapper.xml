<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hkt.btu.sd.core.dao.mapper.UTCallRequestRecordMapper">

    <resultMap id="UTCallRequestEntity" type="com.hkt.btu.sd.core.dao.entity.UTCallRequestEntity" >
        <result column="UT_CALL_ID" property="utCallId" />
        <result column="BSN_NUM" property="bsnNum" />
        <result column="CODE" property="code" />
        <result column="MSG" property="msg" />
        <result column="SERVICECODE" property="serviceCode" />
        <result column="SEQ" property="seq" />
        <result column="SEQ_TYPE" property="seqType" />
        <result column="LAST_CHECK_DATE" property="lastCheckDate" />
        <result column="TICKET_DET_ID" property="ticketDetId" />

        <result column="CREATEDATE" property="createdate" />
        <result column="CREATEBY" property="createby" />
        <result column="MODIFYDATE" property="modifydate" />
        <result column="MODIFYBY" property="modifyby" />
    </resultMap>

    <select id="getUTCallRequestRecordList" resultMap="UTCallRequestEntity">
        SELECT *
        FROM UT_CALL_REQUEST_RECORD
    </select>

    <insert id="insertNewUTCallRequestRecord">
        INSERT INTO UT_CALL_REQUEST_RECORD (UT_CALL_ID, BSN_NUM, CODE, MSG, SERVICECODE, SEQ, SEQ_TYPE, LAST_CHECK_DATE, TICKET_DET_ID, CREATEDATE, CREATEBY)
        VALUES (SEQ_UT_CALL_ID.nextval, #{bsnNum}, #{code}, #{msg}, #{serviceCode}, #{seq}, #{seqType}, null, #{ticketDetId}, CURRENT_TIMESTAMP, #{createBy})
    </insert>

    <update id="updateRequestAfterGetResult">
        UPDATE UT_CALL_REQUEST_RECORD
        SET LAST_CHECK_DATE = CURRENT_TIMESTAMP,
            MODIFYBY   = #{modifyBy},
            MODIFYDATE = CURRENT_TIMESTAMP
        WHERE UT_CALL_ID = #{utCallId}
    </update>

</mapper>