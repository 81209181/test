<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



    <!-- BTU Spring Security -->
    <alias name="btuLoginSuccessHandler" alias="customLoginSuccessHandler"/>
    <bean id="btuLoginSuccessHandler" class="com.hkt.btu.common.spring.security.web.authentication.BtuLoginSuccessHandler"/>

    <alias name="btuExceptMapAuthFailureHandler" alias="customExceptMapAuthFailureHandler"/>
    <bean id="btuExceptMapAuthFailureHandler" class="com.hkt.btu.common.spring.security.web.authentication.BtuExceptionMappingAuthenticationFailureHandler"/>

    <alias name="btuLogoutSuccessHandler" alias="customLogoutSuccessHandler"/>
    <bean id="btuLogoutSuccessHandler" class="com.hkt.btu.common.spring.security.web.authentication.logout.BtuLogoutSuccessHandler"/>

    <alias name="btuLoginUrlAuthenticationEntryPoint" alias="customLoginUrlAuthenticationEntryPoint"/>
    <bean id="btuLoginUrlAuthenticationEntryPoint" class="com.hkt.btu.common.spring.security.web.authentication.BtuLoginUrlAuthenticationEntryPoint"/>

    <alias name="btuAccessDeniedHandler" alias="customAccessDeniedHandler"/>
    <bean id="btuAccessDeniedHandler" class="com.hkt.btu.common.spring.security.access.BtuAccessDeniedHandler"/>

    <alias name="btuSecurityMetadataSource" alias="customBtuSecurityMetadataSource"/>
    <bean id="btuSecurityMetadataSource" class="com.hkt.btu.common.spring.security.access.intercept.BtuSecurityMetadataSource"/>

    <alias name="btuAccessDecisionManager" alias="customBtuAccessDecisionManager"/>
    <bean id="btuAccessDecisionManager" class="com.hkt.btu.common.spring.security.access.BtuAccessDecisionManager"/>

    <alias name="btuSecurityInterceptor" alias="customBtuSecurityInterceptor"/>
    <bean id="btuSecurityInterceptor" class="com.hkt.btu.common.spring.security.access.intercept.BtuSecurityInterceptor"/>

    <alias name="btuUserDetailsService" alias="customBtuUserDetailsService"/>
    <bean id="btuUserDetailsService" class="com.hkt.btu.common.spring.security.core.userdetails.BtuUserDetailsServiceImpl"/>

    <alias name="btuBCryptPasswordEncoder" alias="btuPasswordEncoder"/>
    <bean id="btuBCryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>

    <alias name="ldapAuthenticationProvider" alias="customLdapAuthenticationProvider"/>
    <bean id="ldapAuthenticationProvider" class="com.hkt.btu.common.spring.security.authentication.LdapAuthenticationProvider"/>

    <alias name="tokenAuthenticationProvider" alias="customTokenAuthenticationProvider"/>
    <bean id="tokenAuthenticationProvider" class="com.hkt.btu.common.spring.security.authentication.TokenAuthenticationProvider"/>



    <!-- BTU Service -->
    <alias name="btuSiteConfigService" alias="siteConfigService"/>
    <bean id="btuSiteConfigService" class="com.hkt.btu.common.core.service.impl.BtuSiteConfigServiceImpl"/>

    <alias name="btuUserService" alias="userService"/>
    <bean id="btuUserService" class="com.hkt.btu.common.core.service.impl.BtuUserServiceImpl"/>

    <alias name="btuPathCtrlService" alias="pathCtrlService"/>
    <bean id="btuPathCtrlService" class="com.hkt.btu.common.core.service.impl.BtuPathCtrlServiceImpl"/>

    <alias name="btuDaoAuthenticationProvider" alias="customBtuDaoAuthenticationProvider"/>
    <bean id="btuDaoAuthenticationProvider" class="com.hkt.btu.common.spring.security.authentication.BtuDaoAuthenticationProvider"/>

    <alias name="dbDaoAuthenticationProvider" alias="customDbDaoAuthenticationProvider"/>
    <bean id="dbDaoAuthenticationProvider" class="com.hkt.btu.common.spring.security.authentication.DbDaoAuthenticationProvider"/>

    <alias name="btuHttpService" alias="httpService"/>
    <bean id="btuHttpService" class="com.hkt.btu.common.core.service.impl.BtuHttpServiceImpl"/>

    <alias name="btuSchedulerService" alias="schedulerService"/>
    <bean id="btuSchedulerService" class="com.hkt.btu.common.core.service.impl.BtuSchedulerServiceImpl"/>

    <alias name="btuSensitiveDataService" alias="sensitiveDataService"/>
    <bean id="btuSensitiveDataService" class="com.hkt.btu.common.core.service.impl.BtuSensitiveDataServiceImpl"/>

    <alias name="btuAuditTrailService" alias="auditTrailService"/>
    <bean id="btuAuditTrailService" class="com.hkt.btu.common.core.service.impl.BtuAuditTrailServiceImpl"/>

    <alias name="btuConfigParamService" alias="configParamService"/>
    <bean id="btuConfigParamService" class="com.hkt.btu.common.core.service.impl.BtuConfigParamServiceImpl"/>

    <alias name="btuEmailService" alias="emailService"/>
    <bean id="btuEmailService" class="com.hkt.btu.common.core.service.impl.BtuEmailServiceImpl"/>

    <alias name="btuCacheService" alias="cacheService"/>
    <bean id="btuCacheService" class="com.hkt.btu.common.core.service.impl.BtuCacheServiceImpl"/>

    <alias name="btuLdapService" alias="ldapService"/>
    <bean id="btuLdapService" class="com.hkt.btu.common.core.service.impl.BtuLdapServiceImpl"/>

    <alias name="btuHealthCheckService" alias="healthCheckService"/>
    <bean id="btuHealthCheckService" class="com.hkt.btu.common.core.service.impl.BtuHealthCheckServiceImpl"/>

    <alias name="btuTemplateEngineService" alias="templateEngineService"/>
    <bean id="btuTemplateEngineService" class="com.hkt.btu.common.core.service.impl.BtuTemplateEngineServiceImpl"/>

    <alias name="btuCsvGenerator" alias="csvGenerator"/>
    <bean id="btuCsvGenerator" class="com.hkt.btu.common.core.service.impl.BtuCsvServiceImpl"/>

    <alias name="btuApiClientService" alias="apiClientService"/>
    <bean id="btuApiClientService" class="com.hkt.btu.common.core.service.impl.BtuApiClientServiceImpl"/>

    <alias name="btuCronJobLogService" alias="cronJobLogService"/>
    <bean id="btuCronJobLogService" class="com.hkt.btu.common.core.service.impl.BtuCronJobLogServiceImpl"/>

    <alias name="btuCronJobProfileService" alias="cronJobProfileService"/>
    <bean id="btuCronJobProfileService" class="com.hkt.btu.common.core.service.impl.BtuCronJobProfileServiceImpl"/>

    <alias name="btuReportService" alias="reportService"/>
    <bean id="btuReportService" class="com.hkt.btu.common.core.service.impl.BtuReportServiceImpl"/>

    <!--  Bean Populator  -->
    <alias name="btuSiteConfigBeanPopulator" alias="siteConfigBeanPopulator"/>
    <bean id="btuSiteConfigBeanPopulator" class="com.hkt.btu.common.core.service.populator.BtuSiteConfigBeanPopulator"/>

    <alias name="btuCacheBeanPopulator" alias="cacheBeanPopulator"/>
    <bean id="btuCacheBeanPopulator" class="com.hkt.btu.common.core.service.populator.BtuCacheBeanPopulator"/>

    <alias name="btuConfigParamBeanPopulator" alias="configParamBeanPopulator"/>
    <bean id="btuConfigParamBeanPopulator" class="com.hkt.btu.common.core.service.populator.BtuConfigParamBeanPopulator"/>

    <alias name="btuCronJobInstBeanPopulator" alias="cronJobInstBeanPopulator"/>
    <bean id="btuCronJobInstBeanPopulator" class="com.hkt.btu.common.core.service.populator.BtuCronJobInstBeanPopulator"/>

    <alias name="btuCronJobProfileBeanPopulator" alias="cronJobProfileBeanPopulator"/>
    <bean id="btuCronJobProfileBeanPopulator" class="com.hkt.btu.common.core.service.populator.BtuCronJobProfileBeanPopulator"/>

    <alias name="btuReportProfileBeanPopulator" alias="reportProfileBeanPopulator"/>
    <bean id="btuReportProfileBeanPopulator" class="com.hkt.btu.common.core.service.populator.BtuReportProfileBeanPopulator"/>


    <!-- BTU Facade -->
    <alias name="btuCacheFacade" alias="cacheFacade"/>
    <bean id="btuCacheFacade" class="com.hkt.btu.common.facade.impl.BtuCacheFacadeImpl"/>

    <alias name="btuApiClientFacade" alias="apiClientFacade"/>
    <bean id="btuApiClientFacade" class="com.hkt.btu.common.facade.impl.BtuApiClientFacadeImpl"/>

    <alias name="btuConfigParamFacade" alias="configParamFacade"/>
    <bean id="btuConfigParamFacade" class="com.hkt.btu.common.facade.impl.BtuConfigParamFacadeImpl"/>

    <alias name="btuJobFacade" alias="jobFacade"/>
    <bean id="btuJobFacade" class="com.hkt.btu.common.facade.impl.BtuJobFacadeImpl"/>

    <alias name="btuReportFacade" alias="reportFacade"/>
    <bean id="btuReportFacade" class="com.hkt.btu.common.facade.impl.BtuReportFacadeImpl"/>

    <!--  Data Populator  -->
    <alias name="btuCacheProfileDataPopulator" alias="cacheProfileDataPopulator"/>
    <bean id="btuCacheProfileDataPopulator" class="com.hkt.btu.common.facade.populator.BtuCacheProfileDataPopulator"/>

    <alias name="btuConfigParamDataPopulator" alias="configParamDataPopulator"/>
    <bean id="btuConfigParamDataPopulator" class="com.hkt.btu.common.facade.populator.BtuConfigParamDataPopulator"/>

    <alias name="btuCronJobInstDataPopulator" alias="cronJobInstDataPopulator"/>
    <bean id="btuCronJobInstDataPopulator" class="com.hkt.btu.common.facade.populator.BtuCronJobInstDataPopulator"/>

    <alias name="btuCronJobProfileDataPopulator" alias="cronJobProfileDataPopulator"/>
    <bean id="btuCronJobProfileDataPopulator" class="com.hkt.btu.common.facade.populator.BtuCronJobProfileDataPopulator"/>

    <alias name="btuReportProfileDataPopulator" alias="reportProfileDataPopulator"/>
    <bean id="btuReportProfileDataPopulator" class="com.hkt.btu.common.facade.populator.BtuReportProfileDataPopulator"/>
</beans>